<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.english.HardLevel">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button2"
        android:layout_below="@+id/hard_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/dict2"
        android:layout_alignBottom="@+id/hard_button6"
        android:layout_alignStart="@+id/dict3"
        android:layout_alignLeft="@+id/dict3"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button3"
        android:layout_below="@+id/hard_button2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button4"
        android:layout_alignTop="@+id/hard_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button5"
        android:layout_alignTop="@+id/hard_button2"
        android:layout_alignStart="@+id/hard_button4"
        android:layout_alignLeft="@+id/hard_button4"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button6"
        android:layout_alignTop="@+id/hard_button3"
        android:layout_alignStart="@+id/hard_button5"
        android:layout_alignLeft="@+id/hard_button5"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/hard_button7"
        android:layout_alignTop="@+id/hard_button"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/dict3"
        android:layout_alignTop="@+id/hard_button2"
        android:layout_alignStart="@+id/hard_button7"
        android:layout_alignLeft="@+id/hard_button7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/hard_textView2"
        android:layout_below="@+id/dict2"
        android:layout_alignEnd="@+id/dict2"
        android:layout_marginTop="40dp"
        android:text=" "
        android:layout_alignRight="@+id/dict2" />

    <Button
        android:id="@+id/hard_button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dict2"
        android:layout_below="@+id/hard_textView2"
        android:text="OK"
        android:background="@drawable/oval_button"
        android:layout_alignLeft="@+id/dict2" />
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hard_button10"
        android:layout_toRightOf="@+id/hard_button10"
        android:layout_toEndOf="@+id/hard_button10"
        android:onClick="cancel"
        android:background="@drawable/oval_button"
        android:text="отмена" />
    <TextView
        android:id="@+id/hlwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below= "@+id/hard_button10"
        android:textColor="#D6AE01"
        android:text=""/>
    <TextView
        android:id="@+id/hllost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below= "@+id/hlwin"
        android:textColor="#D6AE01"
        android:text=""/>

    <TextView
        android:id="@+id/hard_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/hard_button"
        android:text="Make a construction"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/hard_button" />

</RelativeLayout>
